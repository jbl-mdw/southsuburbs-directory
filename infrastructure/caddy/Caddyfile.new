status.southsuburbsbest.com {
    encode zstd gzip
    reverse_proxy ssb_uptimekuma:3001
}

automation.leads2scale.com {
    encode zstd gzip
    reverse_proxy n8n:5678
}

ai.leads2scale.com {
    encode zstd gzip
    reverse_proxy flowise:3000
}

southsuburbsbest.com, www.southsuburbsbest.com {
    encode zstd gzip

    # /directus â†’ Directus
    @directus path /directus*
    handle @directus {
        uri strip_prefix /directus
        reverse_proxy ssb_directus:8055
    }

    # ğŸ” Redirect /location/<slug> â†’ /city/<slug> (must be BEFORE reverse_proxy)
    @oldLocation path_regexp loc ^/location/(.+)$
    redir @oldLocation /city/{re.loc.1} 308

    # Everything else â†’ Next.js
    reverse_proxy ssb_frontend:3000
}

admin.southsuburbsbest.com {
    encode zstd gzip
    reverse_proxy ssb_directus:8055
}
