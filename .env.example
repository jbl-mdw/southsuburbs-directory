# ===================================
# SOUTH SUBURBS BEST - ENVIRONMENT VARIABLES
# ===================================
# Instructions: Copy this file to .env and replace all placeholder values

# ===================================
# PostgreSQL Database
# ===================================
POSTGRES_DB=southsuburbs
POSTGRES_USER=ssb_admin
POSTGRES_PASSWORD=GENERATE_SECURE_PASSWORD_32_CHARS

# ===================================
# Directus CMS
# ===================================
DIRECTUS_KEY=GENERATE_RANDOM_32_CHARACTER_KEY
DIRECTUS_SECRET=GENERATE_RANDOM_32_CHARACTER_SECRET
DIRECTUS_ADMIN_EMAIL=admin@yourdomain.com
DIRECTUS_ADMIN_PASSWORD=GENERATE_STRONG_PASSWORD

# Session Configuration
ACCESS_TOKEN_TTL=8h
REFRESH_TOKEN_TTL=7d
SESSION_COOKIE_SECURE=false
SESSION_COOKIE_SAME_SITE=lax

# CORS Settings
CORS_ENABLED=true
CORS_ORIGIN=true

# ===================================
# MeiliSearch
# ===================================
MEILI_MASTER_KEY=GENERATE_RANDOM_MASTER_KEY_32_CHARS

# ===================================
# n8n Automation
# ===================================
N8N_ENCRYPTION_KEY=GENERATE_RANDOM_32_CHARACTER_KEY

# ===================================
# Caddy / SSL
# ===================================
CADDY_EMAIL=your-email@yourdomain.com
