southsuburbsbest.com {
    encode gzip
    
    @health path /health.txt
    handle @health { 
        respond "ok" 200 
    }
    
    handle_path /widget/* {
        reverse_proxy host.docker.internal:8081
    }
    
    handle_path /api/widget/* {
        reverse_proxy host.docker.internal:8081
    }
    
    reverse_proxy frontend:3000
}

